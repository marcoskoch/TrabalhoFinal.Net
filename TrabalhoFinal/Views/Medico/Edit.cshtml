@model TrabalhoFinal.Models.Medico

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Editar Medico</h1>
<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdMedico" />
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdEspecialidade" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="IdEspecialidade" class="form-control" asp-items="ViewBag.IdEspecialidade"></select>
                <span asp-validation-for="IdEspecialidade" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
