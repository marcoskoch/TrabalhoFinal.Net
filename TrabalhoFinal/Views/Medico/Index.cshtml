@model IEnumerable<TrabalhoFinal.Models.Medico>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Medicos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Medico</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidade.Nome)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.IdMedico">Editar</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdMedico">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdMedico"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
                    <a  asp-controller="Agenda" class="btn btn-primary" asp-action="AgendaMedico" asp-route-id="@item.IdMedico">Consultar Agenda</a>
                </td>
            </tr>
        }
    </tbody>
</table>
