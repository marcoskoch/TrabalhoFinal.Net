@model IEnumerable<TrabalhoFinal.Models.Especialidade>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Especialidades</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Especialidade</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.IdEspecialidade">Editar</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdEspecialidade">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdEspecialidade"> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a> 
            </td>
        </tr>
}
    </tbody>
</table>
