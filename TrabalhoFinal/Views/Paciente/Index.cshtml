@model IEnumerable<TrabalhoFinal.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Pacientes</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Novo Paciente</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.IdPaciente">Editar</a> 
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdPaciente">Detalhes</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdPaciente"> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a> 
                <a asp-controller="Consulta" class="btn btn-primary" asp-action="ConsultaPaciente" asp-route-id="@item.IdPaciente">Consultar Agendamentos</a>
            </td>
        </tr>
}
    </tbody>
</table>
