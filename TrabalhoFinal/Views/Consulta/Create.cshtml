@model TrabalhoFinal.Models.Consulta

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Cadastrar Consulta</h1>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        @if (ViewBag.NotificacaoConsulta != null)
        {
            <div class="alert alert-danger">
                Nenhuma Consulta nos ultimos 30 dias, selecione Primeira Consulta!
            </div>
        }
        @if (ViewBag.NotificacaoAgenda != null)
        {
            <div class="alert alert-danger">
                Data ou Horario indisponivel na Agenda do Medico!
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IdMedico" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdMedico" class ="form-control" asp-items="ViewBag.IdMedico"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdPaciente" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdPaciente" class ="form-control" asp-items="ViewBag.IdPaciente"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DataHora" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DataHora" class="form-control" />
                <span asp-validation-for="DataHora" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HorarioConsulta" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="HorarioConsulta" class="form-control" />
                <span asp-validation-for="HorarioConsulta" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TempoConsulta" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TempoConsulta" class ="form-control" asp-items="ViewBag.TempoConsulta"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
